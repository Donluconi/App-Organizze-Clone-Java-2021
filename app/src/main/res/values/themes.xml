<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Organizze" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azulPiscina</item>
        <item name="colorPrimaryDark">@color/azulEscuro</item>
        <item name="colorAccent">@color/rosa</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- <item name="colorSurface">@color/azulPiscina</item> -->
        <!-- Customize your theme here. -->
    </style>

    <style name="despesaTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item> <!-- sem titulos -->
        <item name="android:colorPrimary">@color/colorPrimaryDespesa</item>
        <item name="android:colorPrimaryDark">@color/colorDarkDespesa</item>
        <item name="android:colorAccent">@color/colorAccentDespesa</item>
    </style>

    <style name="receitaTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item> <!-- sem titulos -->
        <item name="android:colorPrimary">@color/colorPrimaryReceita</item>
        <item name="android:colorPrimaryDark">@color/colorDarkReceita</item>
        <item name="android:colorAccent">@color/colorAccentReceita</item>
    </style>


    <style name="Theme.Organizze.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Organizze.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Organizze.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>